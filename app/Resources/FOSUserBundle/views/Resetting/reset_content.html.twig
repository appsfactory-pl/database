<form name="fos_user_resetting_form" method="post" action="/app_dev.php/resetting/reset/{{ token }}" class="fos_user_resetting_reset">
    <div class="control-group normal_text"> <h3><img src="img/logo.png" alt="Logo" /></h3></div>
    <div id="fos_user_resetting_form">
        <div class="control-group">
            <div class="controls">
                <div class="main_input_box hide-label">
                    <span class="add-on bg_ly"><i class="icon-lock"></i></span>
                        {{ form_widget(form.plainPassword.first,{'attr':{'placeholder':'New password','class':'password'}}) }}
                        {#                    <input type="password" id="password" name="os_user_resetting_form[plainPassword][first]" required="required" placeholder="New password" />#}
                </div>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <div class="main_input_box hide-label">
                    <span class="add-on bg_ly"><i class="icon-lock"></i></span>
                        {{ form_widget(form.plainPassword.second,{'attr':{'placeholder':'Repeat new password','class':'password'}}) }}
                        {#                    <input type="password" id="password" name="os_user_resetting_form[plainPassword][second]" required="required" placeholder="Repeat new password" />#}
                </div>
            </div>
        </div>
        {{ form_row(form._token) }}
    </div>
    <div class="form-actions">
        <span class="pull-right">
            <input type="submit" value="Reset password" class="btn btn-success"/>
        </span>    
    </div>
</form>
