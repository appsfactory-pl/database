{% extends "::base.html.twig" %}

{% block title %}Edit Address{% endblock %}
{% block header %}Edit Address{% endblock %}

{% block body %}
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-box">
                <div class="widget-title"><span class="icon"><i class="icon-th"></i></span>
                    <h5>Edit Address</h5>
                </div>
            </div>
            {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
            <div class="control-group">
                {{ form_label(form.address,'Address',{'label_attr':{'class':'control-label'}}) }}
                <div class="controls">
                    {{ form_widget(form.address,{'attr':{'placeholder':'Address','class':''}}) }}
                </div>
            </div>
            <div class="control-group">
                {{ form_label(form.postcode,'Postcode',{'label_attr':{'class':'control-label'}}) }}
                <div class="controls">
                    {{ form_widget(form.postcode,{'attr':{'placeholder':'Postcode','class':''}}) }}
                </div>
            </div>

            <div class="control-group">
                {{ form_label(form.dateMovedIn,'Date Moved In',{'label_attr':{'class':'control-label'}}) }}
                <div class="controls">
                    <div class="input-append date">
                        {{ form_widget(form.dateMovedIn,{'attr':{'placeholder':'Date Moved In','class':'datepicker'}}) }}
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <input type="submit" class="btn btn-success" value="Save">
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}