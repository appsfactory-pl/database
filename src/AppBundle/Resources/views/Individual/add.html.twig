{% extends "::base.html.twig" %}

{% block title %}Add Person{% endblock %}
{% block header %}Add Person{% endblock %}
{% block body %}

    <div class="container-fluid">
        {#        <hr>#}
        <div class="row-fluid">
            <div class="span8">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <h5>Add Person</h5>
                    </div>
                    <div class="widget-content nopadding">
                        {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
                        <div class="control-group">
                            {{ form_label(form.status,'Status',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.status,{'attr':{'placeholder':'Status','class':''}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.id2,'Old ID',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.id2,{'attr':{'placeholder':'Old ID','class':''}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.title,'Title',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.title,{'attr':{'placeholder':'Title','class':''}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.forename,'First Name',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.forename,{'attr':{'placeholder':'First Name','class':''}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.middlename,'Middle Name',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.middlename,{'attr':{'placeholder':'Middle Name','class':''}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.lastname,'Surname',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.lastname,{'attr':{'placeholder':'Surname','class':''}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.maidenname,'Previous Names',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.maidenname,{'attr':{'placeholder':'Previous Names','class':''}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.dob,'Date of Birth',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                <div class="input-append date">
                                    {{ form_widget(form.dob,{'attr':{'placeholder':'Date of Birth','class':'datepicker'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.maritialStatus,'Maritial Status',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.maritialStatus,{'attr':{'placeholder':'Maritial Status','class':''}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.phone,'Telephone',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.phone,{'attr':{'placeholder':'Phone','class':''}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.phone2,'Telephone 2',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.phone2,{'attr':{'placeholder':'Phone 2','class':''}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.email,'email',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.email,{'attr':{'placeholder':'Email','class':''}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.address,'Address',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.address,{'attr':{'placeholder':'Address','class':''}}) }}
                            </div>
                        </div>

                        <div class="control-group">
                            {{ form_label(form.postcode,'Postcode',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.postcode,{'attr':{'placeholder':'Postcode'}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.dateMovedIn,'Date Moved In',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                <div class="input-append date">
                                    {{ form_widget(form.dateMovedIn,{'attr':{'placeholder':'Date Moved In','class':'datepicker'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="control-group">
                            {{ form_label(form.nin,'NIN',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.nin,{'attr':{'placeholder':'NIN'}}) }}
                            </div>
                        </div>

                        <div class="control-group">
                            {{ form_label(form.utr,'UTR',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.utr,{'attr':{'placeholder':'UTR','class':''}}) }}
                            </div>
                        </div>

                        <div class="control-group" style="height: 280px;">
                            {{ form_label(form.notes,'Notes',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.notes,{'attr':{'placeholder':'Type Text...','style':'height:180px;'}}) }}
                            </div>
                        </div>
                            
                        <div class="control-group">
                            {{ form_label(form.dateDisengaged,'Client Disengaged',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                <div class="input-append date">
                                    {{ form_widget(form.dateDisengaged,{'attr':{'placeholder':'Client Disengaged','class':'datepicker'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.disengegementReason,'Disengagement Reason',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.disengegementReason,{'attr':{'placeholder':'Disengagement Reason','class':''}}) }}
                            </div>
                        </div>
                                
                        <div class="control-group">
                            {{ form_label(form.archived,'Client Archived',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                <div class="input-append date">
                                    {{ form_widget(form.archived,{'attr':{'placeholder':'Client Archived','class':'datepicker'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.archiveNumber,'Archive Number',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.archiveNumber,{'attr':{'placeholder':'Archive Number','class':''}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.archiveNote,'Archive Note',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.archiveNote,{'attr':{'placeholder':'Archive Note','class':''}}) }}
                            </div>
                        </div>


                        <div class="form-actions">
                            <input type="submit" class="btn btn-success" value="Save">
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
    </div>


{% endblock %}
