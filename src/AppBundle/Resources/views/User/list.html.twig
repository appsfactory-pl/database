{% extends "::base.html.twig" %}

{% block title %}Users{% endblock %}
{% block header %}Users{% endblock %}

{% block body %}
    {% if users is not empty %}
        <div class="widget-box">
            <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
                <h5>Data table</h5>
            </div>
            <div class="widget-content nopadding">
                <table class="table table-bordered data-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Last login</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.username }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.enabled }}</td>
                                <td>{{ user.lastLogin|date("F jS \\a\\t g:ia") }}</td>
                                <td>
                                    <a href="{{ path('app_user_edit',{'id':user.id}) }}" class="btn btn-primary btn-xs"><i class="icon icon-edit"></i></a>
                                    <a href="{{ path('app_user_delete',{'id':user.id}) }}" class="btn btn-danger btn-xs"><i class="icon icon-remove"></i></a>

{#                                    {{ user.id }}#}
                                </td>
                                {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
{% endblock %}
