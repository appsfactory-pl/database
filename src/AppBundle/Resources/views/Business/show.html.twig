{% extends "::base.html.twig" %}

{% block title %}{{ business.name }}{% endblock %}
{% block header %}{{ business.name }}{% endblock %}

{% block body %}
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-box">
                <div class="widget-title"> 
                    <a href="{{ path('app_business_edit',{'id':business.id}) }}" class="btn btn-primary" style="float: left; margin: 3px;">
                        <i class="icon icon-edit"></i>
                    </a> 
                    <h5>Business data</h5>
                </div>
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td class="">ID</td>
                            <td class="">{{ business.getId }}</td>
                        </tr>
                        <tr>
                            <td class="">Status</td>
                            <td class="">{{ business.getStatus.getName }}</td>
                        </tr>
                        <tr>
                            <td class="">Old ID</td>
                            <td class="">{{ business.getId2 }}</td>
                        </tr>
                        <tr>
                            <td class="">Legal Form</td>
                            <td class="">{{ business.getLegalForm.getName }}</td>
                        </tr>
                        <tr>
                            <td class="">Business Name</td>
                            <td class="">{{ business.getName }}</td>
                        </tr>
                        <tr>
                            <td class="">Address</td>
                            <td class="">{{ business.getAddress }}</td>
                        </tr>
                        <tr>
                            <td class="">Postcode</td>
                            <td class="">{{ business.getPostcode }}</td>
                        </tr>
                        <tr>
                            <td class="">Date Moved In</td>
                            <td class="">{{ business.getDateMovedIn }}</td>
                        </tr>
                        <tr>
                            <td class="">Date of Incorporation</td>
                            <td class="">{{ business.getDoi }}</td>
                        </tr>
                        <tr>
                            <td class="">Date of Cessation</td>
                            <td class="">{{ business.getDoc }}</td>
                        </tr>
                        <tr>
                            <td class="">Beta Page Link</td>
                            <td class="">
                                <a href="{{ business.getBetaPageLink }}" target="_blank">
                                    {{ business.getBetaPageLink }}
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td class="">Telephone</td>
                            <td class="">{{ business.getTelephone }}</td>
                        </tr>
                        <tr>
                            <td class="">Email</td>
                            <td class="">{{ business.getEmail }}</td>
                        </tr>
                        <tr>
                            <td class="">Company number</td>
                            <td class="">{{ business.getCno }}</td>
                        </tr>
                        <tr>
                            <td class="">UTR</td>
                            <td class="">{{ business.getUtr }}</td>
                        </tr>
                        <tr>
                            <td class="">VAT</td>
                            <td class="">{{ business.getVat }}</td>
                        </tr>
                        <tr>
                            <td class="">Employer PAYE Ref</td>
                            <td class="">{{ business.getEpaye }}</td>
                        </tr>
                        <tr>
                            <td class="">Accounts Office Ref</td>
                            <td class="">{{ business.getAccoff }}</td>
                        </tr>
                        <tr>
                            <td class="">Accounts Office</td>
                            <td class="">{{ business.getAccountsOffice }}</td>
                        </tr>
                        <tr>
                            <td class="">Webfilling Email</td>
                            <td class="">{{ business.getWebfillingEmail }}</td>
                        </tr>
                        <tr>
                            <td class="">Webfilling Password</td>
                            <td class="">{{ business.getWebfillingPassword }}</td>
                        </tr>
                        <tr>
                            <td class="">Authentication Code</td>
                            <td class="">{{ business.getAuthenticationCode }}</td>
                        </tr>
                        <tr>
                            <td class="">Bank account details</td>
                            <td class="">{{ business.getAccount|raw }}</td>
                        </tr>
                        <tr>
                            <td class="">e-Signature Password</td>
                            <td class="">{{ business.eSignaturePassword }}</td>
                        </tr>
                        <tr>
                            <td class="">Notes</td>
                            <td class="">{{ business.getNotes|raw }}</td>
                        </tr>
                        <tr>
                            <td class="">Client Disengaged</td>
                            <td class="">{{ business.getDateDisengaged }}</td>
                        </tr>
                        <tr>
                            <td class="">Disengagement Reason</td>
                            <td class="">{% if business.getDisengegementReason is not empty %}{{ business.getDisengegementReason.getName }}{% endif %}</td>
                        </tr>
                        <tr>
                            <td class="">Client Archived</td>
                            <td class="">{{ business.getArchived }}</td>
                        </tr>
                        <tr>
                            <td class="">Client Archive Number</td>
                            <td class="">{{ business.getArchiveNumber }}</td>
                        </tr>
                        <tr>
                            <td class="">Client Archive Note</td>
                            <td class="">{{ business.getArchiveNote }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="span6">
            <div class="widget-box">
                <div class="widget-title"> <span class="icon"> <i class="icon-list"></i> </span>
                    <h5>Connections</h5>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Postcode</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if individuals is not empty %}
                            {% for individual in individuals %}
                                <tr>
                                    <td>{{ individual.getIndividual.getId }}</td>
                                    <td>{{ individual.getIndividual.getForename }} {{ individual.getIndividual.getMiddlename }} {{ individual.getIndividual.getLastname }}</td>
                                    <td>{{ individual.getIndividual.getAddress }}</td>
                                    <td>{{ individual.getIndividual.getPostcode }}</td>
                                    <td>{{ individual.getType }}</td>
                                    <td>
                                        <a href="{{ path('app_individual_show',{'id':individual.getIndividual.getId}) }}" class="btn btn-success btn-xs">
                                            <i class="icon icon-file"></i>
                                        </a>
                                        <a href="{{ path('app_business_removeindividual',{'id':individual.getId}) }}" class="btn btn-danger btn-xs">
                                            <i class="icon icon-remove"></i>
                                        </a>

                                        {#                                        {{ individual.getId }}#}
                                    </td>
                                </tr>                            
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
                <div class="widget-content nopadding">
                    <h3>Add individual</h3>
                    {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
                    <div class="control-group">
                        {{ form_label(form.business,'Business',{'label_attr':{'class':'control-label'}}) }}
                        <div class="controls">
                            {{ form_widget(form.business,{'attr':{'placeholder':'Business','class':''}}) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(form.individual,'Individual',{'label_attr':{'class':'control-label'}}) }}
                        <div class="controls">
                            {{ form_widget(form.individual,{'attr':{'placeholder':'Individual','class':''}}) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(form.type,'Type',{'label_attr':{'class':'control-label'}}) }}
                        <div class="controls">
                            {{ form_widget(form.type,{'attr':{'placeholder':'Type','class':''}}) }}
                        </div>
                    </div>

                    <div class="form-actions">
                        <input type="submit" class="btn btn-success" value="Save">
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="widget-box">
                <div class="widget-title"> <span class="icon"> <i class="icon-list"></i> </span>
                    <h5>Files</h5>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Type</th>
                            <th>Date</th>
                            <th>Additional Info</th>
                            <th>File</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if files is not empty %}
                            {% for file in files %}
                                <tr>
                                    <td>{{ file.getId }}</td>
                                    <td>{{ file.getType.getName }}</td>
                                    <td>{{ file.getDate }}</td>
                                    <td>{{ file.getAdditionalInfo }}</td>
                                    <td>
                                        <a href="{{ file.getPath }}{{ file.getFileName }}" target="_blank" class="btn btn-primary">
                                            <i class="icon icon-file"></i>
                                        </a>
                                    </td>
                                </tr>                            
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>


                <h3>Add file</h3>
                {{ form_start(fileForm,{'attr':{'class':'form-horizontal'}}) }}
                <div class="control-group">
                    {{ form_label(fileForm.file,'File',{'label_attr':{'class':'control-label'}}) }}
                    <div class="controls">
                        {{ form_widget(fileForm.file,{'attr':{'placeholder':'File','class':''}}) }}
                    </div>
                </div>
                <div class="control-group">
                    {{ form_label(fileForm.type,'Type',{'label_attr':{'class':'control-label'}}) }}
                    <div class="controls">
                        {{ form_widget(fileForm.type,{'attr':{'placeholder':'Type','class':''}}) }}
                    </div>
                </div>
                <div class="control-group">
                    {{ form_label(fileForm.date,'Date',{'label_attr':{'class':'control-label'}}) }}
                    <div class="controls">
                        {#                            {{ form_widget(fileForm.date,{'attr':{'placeholder':'Date','class':''}}) }}#}
                        <div class="input-append date">
                            {{ form_widget(fileForm.date,{'attr':{'placeholder':'Date','class':'datepicker'}}) }}
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    {{ form_label(fileForm.additionalInfo,'Additional Info',{'label_attr':{'class':'control-label'}}) }}
                    <div class="controls">
                        {{ form_widget(fileForm.additionalInfo,{'attr':{'placeholder':'Additional Info','class':''}}) }}
                    </div>
                </div>

                <div class="form-actions">
                    <input type="submit" class="btn btn-success" value="Save">
                </div>
                {{ form_end(fileForm) }}


            </div>
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-list"></i> </span>
                        <h5>Address History</h5>
                    </div>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Address</th>
                                <th>Postcode</th>
                                <th>Date Moved In</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if addressHistory is not empty %}
                                {% for item in addressHistory %}
                                    <tr>
                                        <td>{{ item.address }}</td>
                                        <td>{{ item.postcode }}</td>
                                        <td>{{ item.dateMovedIn }}</td>
                                        <td>
                                            <a href="{{ path('edit-address-history',{'id':item.getId}) }}" class="btn btn-primary btn-xs">
                                                <i class="icon icon-edit"></i>
                                            </a>
                                            <a href="{{ path('delete-address-history',{'id':item.getId}) }}" class="btn btn-danger btn-xs">
                                                <i class="icon icon-remove"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                        </tbody>
                    </table>


                    <h3>Add Address</h3>
                    {{ form_start(addressHistoryForm,{'attr':{'class':'form-horizontal'}}) }}
                    <div class="control-group">
                        {{ form_label(addressHistoryForm.address,'Address',{'label_attr':{'class':'control-label'}}) }}
                        <div class="controls">
                            {{ form_widget(addressHistoryForm.address,{'attr':{'placeholder':'Address','class':''}}) }}
                        </div>
                    </div>
                    <div class="control-group">
                        {{ form_label(addressHistoryForm.postcode,'Postcode',{'label_attr':{'class':'control-label'}}) }}
                        <div class="controls">
                            {{ form_widget(addressHistoryForm.postcode,{'attr':{'placeholder':'Postcode','class':''}}) }}
                        </div>
                    </div>
                        
                    <div class="control-group">
                        {{ form_label(addressHistoryForm.dateMovedIn,'Date Moved In',{'label_attr':{'class':'control-label'}}) }}
                        <div class="controls">
                            <div class="input-append date">
                                {{ form_widget(addressHistoryForm.dateMovedIn,{'attr':{'placeholder':'Date Moved In','class':'datepicker'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <input type="submit" class="btn btn-success" value="Save">
                    </div>
                    {{ form_end(addressHistoryForm) }}


                </div>
        </div>
    </div>
{% endblock %}
