{% extends "::base.html.twig" %}

{% block title %}Edit Company{% endblock %}
{% block header %}Edit Company{% endblock %}
{% block body %}

    {#    {{ form(form) }}#}


    <div class="container-fluid">
        {#        <hr>#}
        <div class="row-fluid">
            <div class="span8">
                <div class="widget-box">
                    <div class="widget-title"><span class="icon"> <i class="icon-align-justify"></i> </span>
                        <h5>Edit Company</h5>
                    </div>
                    <div class="widget-content nopadding">
                        {{ form_start(form,{'attr':{'class':'form-horizontal','id':'appbundle_business'}}) }}
                        <div class="control-group">
                            {{ form_label(form.address,'Company Address',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.address,{'attr':{'placeholder':'Company Address','class':''}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.postcode,'Postcode',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                {{ form_widget(form.postcode,{'attr':{'placeholder':'Postcode','class':''}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.dateMovedIn,'Date Moved In',{'label_attr':{'class':'control-label'}}) }}
                            <div class="controls">
                                <div class="input-append date">
                                    {{ form_widget(form.dateMovedIn,{'attr':{'placeholder':'Date Moved In','class':'datepicker'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <input type="submit" class="btn btn-success" value="Save">
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
    </div>
    <script type="text/javascript">
        document.getElementById('appbundle_business_address').value = '';
        document.getElementById('appbundle_business_postcode').value = '';
        document.getElementById('appbundle_business_dateMovedIn').value = '';
    </script>

{% endblock %}
